@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Account.Localization
@using Microsoft.Extensions.Configuration
@model Volo.Abp.Account.Web.Pages.Account._2faAuthenticationModel
@inject IHtmlLocalizer<AccountResource> L
@inject IConfiguration configuration

<div class="card mt-3 shadow-sm rounded">
    <div class="card-body p-5">
        <h4>Enable two-factor authentication</h4>
        <form method="post" class="mt-4">
            <div class="form-group">
                <img src="@ViewBag.BarcodeImageUrl" /><br />
                Setup code: @ViewBag.SetupCode<br />
                Input security code: <input name="inputCode" /><br />
            </div>
            <abp-button button-type="Primary" type="submit" class="btn-lg btn-block mt-4">Send</abp-button>
        </form>
    </div>
</div>
